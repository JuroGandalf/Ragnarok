<Window x:Class="Ragnarok.Presentation.Control.ColorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:cp="clr-namespace:Ragnarok.Presentation.Control.ColorPicker"
        xmlns:w="clr-namespace:Ragnarok.Presentation"
        mc:Ignorable="d" 
        SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        Title="色選択ダイアログ"
        d:DesignHeight="213" d:DesignWidth="384">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <GroupBox Header="色設定">
            <Viewbox Width="350">
                <cp:ColorPicker x:Name="colorPicker" />
            </Viewbox>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,5,0,0">
            <Button Content="OK"
                    Command="{x:Static w:DialogCommands.OK}"
                    Width="50" Margin="8,8,4,8" />
            <Button Grid.Row="1" Content="キャンセル"
                    Command="{x:Static w:DialogCommands.Cancel}"
                    Margin="4,8,8,8" />
        </StackPanel>
    </Grid>
</Window>
